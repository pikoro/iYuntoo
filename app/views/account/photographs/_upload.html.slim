- scope = @collection.present? ? account_collection_photographs_path : account_photographs_path
div class="dropzone"
  = s3_uploader_form callback_url: scope, id: "photograph-uploader", max_file_size: 30.megabytes, key: "photographs/{timestamp}-{unique_id}-#{SecureRandom.hex}/${filename}", key_starts_with: "photographs/", acl: "private" do
    = file_field_tag :file, multiple: true

  = t("account.photographs.dropzone", \
    guidelines: link_to(t("account.photographs.guidelines.link"), "#", "data-reveal-id" => "photo-guidelines-modal")).html_safe
  
  div class="clear"
  div class="bars"
  div class="clear"

erb:
  <script id="template-upload" type="text/x-tmpl">
    <div id="file-{%=o.unique_id%}" class="upload">
      {%=o.name%}
      <div class="progress"><div class="meter bar" style="width: 0%"></div></div>
    </div>
  </script>
