- content_for(:main) do
  section id="account-devise" class="row"
    - if user_signed_in?
      aside class="large-2 columns"
        = render partial: "shared/account_nav"

      div class="large-10 columns"
        == yield

    - else
      div class="small-12 large-6 columns large-offset-3"
        == yield

= render file: "layouts/application"
